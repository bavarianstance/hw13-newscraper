<div class="container">
	{{#each article}}
	<div class="card">
{{!-- 		handlebars listing articles and relevant info
 --}}		<h4 class="card-header">{{this.title}}</h4>
		<div class="row">
			<div class="col-lg-8 card-body">
				<h5 class="card-title">By: {{this.author}}</h5>
				<p class="card-text">{{this.boilerplate}}</p>
				<img src="{{this.pic}}">
				<br>
				<a href="{{this.link}}" target="_blank" class="card-link">See Full Article</a>
			</div>
			<div class="col-lg-4 align-self-end text-right">
{{!-- 				handlebars logic for if article already saved in db 
 --}}				{{#if clipped}}
					<button class="btn btn-primary" disabled>Article Clipped</button>
				{{else}}
					<button class="btn btn-info clip-button" data-id="{{this._id}}">Clip Article</button>
				{{/if}}		
			</div>
		</div>
	</div>
{{!-- 	edge case for no articles found
 --}}	{{else}}
	<div class="container">
		<div class="row">
		<h3>Whoops, no articles found. Try scraping again.</h3>
		</div>
	</div>
	{{/each}}
</div>